#!/bin/bash

IMAGE=$1
shift

CONTAINER_DIR="/tmp/$IMAGE"
PARAMS=$@

CONTAINER_NAME="--name $IMAGE"
CONTAINER_VOLUME="--volume $(PWD):$CONTAINER_DIR"
CONTAINER_WORKDIR="-w=$CONTAINER_DIR"
CONTAINER_CMD=$@

CMD="docker run -it --rm $CONTAINER_NAME $CONTAINER_VOLUME $CONTAINER_WORKDIR $IMAGE $CONTAINER_CMD"

eval $CMD

